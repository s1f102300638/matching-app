# ========================================
# Backend Environment Variables
# ========================================
# ‚ö†Ô∏è IMPORTANT: Never commit actual values to version control
# Copy this file to .env and fill in your actual values

# ========================================
# üîí Security (REQUIRED)
# ========================================

# JWT Secret Key (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER use the default value in production!
JWT_SECRET=your-secret-key-here-CHANGE-THIS

# Admin Setup Secret (DELETE AFTER FIRST ADMIN IS CREATED)
# This is used for the /api/setup-admin endpoint
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SETUP_SECRET=your-admin-setup-secret-here-CHANGE-THIS

# ========================================
# üåê Server Configuration
# ========================================

# Server Port (default: 5000)
PORT=5000

# Node Environment (development | production)
NODE_ENV=development

# ========================================
# üîê CORS Configuration
# ========================================

# Allowed CORS Origins (comma-separated)
# Development example: http://localhost:3000
# Production example: https://your-app.vercel.app,https://your-app.com
ALLOWED_ORIGINS=http://localhost:3000

# ========================================
# üìß Email Configuration (Optional)
# ========================================
# For future email notification features

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ========================================
# üìä Monitoring & Logging (Optional)
# ========================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Log Level (error | warn | info | debug)
# LOG_LEVEL=info

# ========================================
# üíæ Database Configuration (REQUIRED for PostgreSQL)
# ========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# 
# Local development example:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/matching_app
# 
# Render PostgreSQL example:
# DATABASE_URL=postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname
# 
# ‚ö†Ô∏è CRITICAL: This is required for the app to work!
DATABASE_URL=postgresql://username:password@localhost:5432/matching_app

# ========================================
# ‚òÅÔ∏è Cloud Storage (Optional)
# ========================================
# For production, store uploads in cloud storage

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ========================================
# üîÑ Rate Limiting (Optional)
# ========================================

# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# üì± Push Notifications (Optional)
# ========================================

# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# ========================================
# üéØ Feature Flags
# ========================================

# Enable/disable invite code requirement
# DISABLE_INVITE_CODE=false
